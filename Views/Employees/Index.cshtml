@model IEnumerable<WebCRUD.Models.Employee>

@{
    ViewData["Title"] = "Cadastro";
}
<h4>Funcionarios</h4>

<table class="table table-houver">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>        
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>Criar funcionario</a>
            </th>
            <th></th>        
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId"><i>Editar</i></a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" onclick="return confirm('Deseja realmente excluir o funcionario?')" class="text-danger ml-1"><i>Excluir</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
